<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:srcCompat="@drawable/bgheader" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/userpic" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Tri Intan Ismayanty"
            android:textSize="25sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Smkn 4 Bandung"
            android:textSize="20sp"
            android:textColor="#E6E0E0"/>
    </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="49dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/iclist"  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Review"
                    android:textStyle="bold"
                    android:textColor="#1B1818"
                    android:paddingTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="49dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/icnet"  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Network"
                    android:textStyle="bold"
                    android:textColor="#1B1818"
                    android:paddingTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="49dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/icplug"  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Plugins"
                    android:textStyle="bold"
                    android:textColor="#1B1818"
                    android:paddingTop="10dp"/>
            </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="49dp"
                        android:layout_height="43dp"
                        app:srcCompat="@drawable/icapps"  />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Apps"
                        android:textStyle="bold"
                        android:textColor="#1B1818"
                        android:paddingTop="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="231dp"
                android:layout_height="159dp"
                android:layout_marginLeft="80sp"
                android:layout_marginTop="310sp"
                app:srcCompat="@drawable/icguide" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7"
                android:layout_centerInParent="true"
                android:text="Need a Guide"
                android:textColor="#292626"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerInParent="true"
                android:text="We will give directions"
                android:textColor="#8A8181"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_centerInParent="true"
                android:text="to the new user"
                android:textColor="#8A8181"
                android:textSize="11sp" />
            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView9"
                android:layout_centerInParent="true"
                android:layout_marginTop="10sp"
                android:background="@drawable/bgbtnguide"
                android:fontFamily="monospace"
                android:text="Guide Me"
                android:textColor="#fff"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>